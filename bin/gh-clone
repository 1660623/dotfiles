#!/usr/bin/env elixir

home_dir = cond do
             repo_home = System.get_env("GITHUB_REPOS_HOME") -> repo_home
             atom_home = System.get_env("ATOM_REPOS_HOME") -> atom_home
             true -> "~/Source"
           end

home_dir = Path.expand(home_dir)
nwo = List.first(System.argv())
repo_dir = Path.join(home_dir, nwo)
System.cmd("hub", ["clone", nwo, repo_dir])
