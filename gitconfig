[alias]
  aa = add --all
  aliases = !git config --list | grep alias | cut -c 7-
  ap = add --patch
  ca = commit --amend
  ci = commit
  co = checkout
  coi = checkout-interactive
  co-pr = !sh -c 'git fetch origin pull/$1/head:pr/$1 && git checkout pr/$1' -
  cp = cherry-pick
  done = !git checkout master && git pull && git delete-merged-branches
  l = log --graph --decorate --pretty=oneline --abbrev-commit --all
  pr = !hub pull-request
  st = status --branch --short
  su = submodule update --init --recursive
  up = !git fetch origin && git rebase origin/master
  dmb = delete-merged-branches
  root = rev-parse --show-toplevel

[branch]
  autoSetupMerge = always

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "status"]
  added = green     # Items that have been added to the index
  changed = yellow  # Items that have been changed, but not added to the index
  untracked = red   # Items that are untracked

[commit]
  template = ~/.gitmessage
  gpgsign = true

[core]
  editor = atom --wait
  excludesfile = ~/.gitignore
  autocrlf = input

[credential]
  helper = osxkeychain

[fetch]
  prune = true

[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true

[github]
  user = lee-dohm

[hub]
  protocol = https

[include]
  path = ~/.gitconfig.identity

[merge]
  ff = true

[pager]
  log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less

[push]
  default = current
