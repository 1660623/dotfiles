[alias]
  aa = add --all
  aliases = !git config --list | grep alias | cut -c 7-
  ap = add --patch
  ca = commit --amend
  ci = commit
  co = checkout
  cor = !git for-each-ref --count=10 --sort=-committerdate --format='%(refname:short) (%(committerdate:relative))' refs/heads | fzf  --nth 1 | awk '{print $1}' | xargs git checkout
  co-pr = !sh -c 'git fetch origin pull/$1/head:pr/$1 && git checkout pr/$1' -
  cp = cherry-pick
  create-branch = !sh -c 'git push origin HEAD:refs/heads/$1 && git fetch origin && git branch --track $1 origin/$1 && cd . && git checkout $1' -
  delete-branch = !sh -c 'git push origin :refs/heads/$1 && git branch -D $1' -
  l = log --graph --decorate --pretty=oneline --abbrev-commit --all
  merge-branch = !git checkout master && git merge @{-1}
  pr = !hub pull-request
  st = status --branch --short
  su = submodule update --init --recursive
  up = !git fetch origin && git rebase origin/master
  dmb = delete-merged-branches
  root = rev-parse --show-toplevel

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "status"]
  added = green     # Items that have been added to the index
  changed = yellow  # Items that have been changed, but not added to the index
  untracked = red   # Items that are untracked

[commit]
  template = ~/.gitmessage
  gpgsign = true

[core]
  editor = atom --wait
  excludesfile = ~/.gitignore
  autocrlf = input

[fetch]
  prune = true

[include]
  path = ~/.gitconfig.identity

[merge]
  ff = true

[push]
  default = current

[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true

[hub]
  protocol = https

[github]
  user = lee-dohm

[credential]
  helper = osxkeychain

[pager]
  log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less
